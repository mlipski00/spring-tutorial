package a_Zadania.a_Dzien_2.b_Zaawansowana_obiektowosc;

public class Shape {
	
	private int x;
	private int y;
	private String color;
	
	public Shape(int x, int y, String color)
	{
		this.x = x;
		this.y = y;
		this.color = color;
	}
	public String getDescription() 
	{
		return this.x + " " + this.y +  " " + color;
	}
	
	public double getDistance(Shape shape) {
		double distance = Math.abs(this.x - shape.x);
		
		
		return distance;
		
	}

}
